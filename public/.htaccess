
# Rename directory mapping
# This maps any requests to /lovable-uploads/ to be served from /Image-elements/
RewriteEngine On
RewriteRule ^lovable-uploads/(.*)$ /Image-elements/$1 [L,R=301]

# Ensure all other paths work with our React Router setup
RewriteBase /
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]
